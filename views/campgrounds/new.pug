include ../partials/header

section.form-wrapper
    div.form-display
        form(action="/campgrounds" method="POST").form-container
            div.form-control
                h3.center-align-text Add Your Campground
            div.form-control
                input(type="text" name="name" placeholder="name" required)
            div.form-control
                input(type="text" name="imagePath" placeholder="image" required)
            div.form-control
                input(type="text" name="location" placeholder="location" required)
            div.form-control
                input(type="text" name="description" placeholder="description" required)
            div.form-control
                button Submit

include ../partials/footer
